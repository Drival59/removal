{% extends 'base.html.twig' %}
{% block body %}
    <h2>Liste des utilisateurs au grade Guilde <span><a href="{{ path('removal_admin_delete_status') }}"> <span class="fas fa-exclamation-triangle" data-toggle="tooltip" title="TOUT Supprimer"></span></a></span></h2><br>
    <a href="{{ path('removal_gestion_status_create') }}"> <span class="fas fa-pencil-alt" data-toggle="tooltip" title="Création nouveau status"></span></a>
    <table class="table">
        <tr>
            <th>Nom Utilisateur</th>
            <th>Participations</th>
            <th>Status Participation</th>
            <th>Modification</th>
        </tr>
        {% for participation in status %}
            {% if participation.participation.importance == "Normal" %}
                <tr>
                    <td>{{ participation.utilisateur.username }}</td>
                    <td>{{ participation.participation.nomParticipation }}</td>
                    <td>{{ participation.confirmation }}</td>
                    {% if participation.confirmation == "Confirmation demandée" %}
                        <td><a href="{{ path('removal_admin_confirm_one_status', {'statusID' : participation.id}) }}"> <span class="fas fa-check" data-toggle="tooltip" title="Confirmer"></span></a>
                            <a href="{{ path('removal_admin_delete_one_status', {'statusID' : participation.id}) }}"> <span class="fas fa-trash-alt" data-toggle="tooltip" title="Supprimer"></span></a></td>
                    {% elseif participation.confirmation == "Confirmation validée" %}
                        <td>Confirmation déjà envoyée !</td>
                    {% else %}
                        <td><a href="{{ path('removal_admin_delete_one_status', {'statusID' : participation.id}) }}"> <span class="fas fa-trash-alt" data-toggle="tooltip" title="Supprimer"></span></a></td>
                    {% endif %}
                    <td></td>
                </tr>
            {% endif %}
        {% endfor %}
    </table><br><br>
    <h2>Liste des utilisateurs au grade User</h2><br>
    <table class="table">
        <tr>
            <th>Nom Utilisateur</th>
            <th>Role</th>
            <th>Modification</th>
        </tr>
        {% for users in users %}
            {% if users.roles[0] == "ROLE_USER" %}
                <tr>
                    <td>{{ users.username }}</td>
                    <td>
                        {% for role in users.roles %}
                            <p>{{ role }}</p>
                        {% endfor %}
                    </td>
                    <td><a href="{{ path('removal_admin_edit_user', {'userID' : users.id}) }}"> <span class="fas fa-pencil-alt" data-toggle="tooltip" title="Édition"></span></a>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function(){
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
{% endblock %}