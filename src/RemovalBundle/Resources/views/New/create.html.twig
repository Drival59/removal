{% extends 'base.html.twig' %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/style-news.css') }}">
{% endblock %}

{% block body %}
  <div class="container">
    <br />
    <div class="removal-backform">
      {{ form_start(form) }}

      {{ form_errors(form) }}

      <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
      </div>
      <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
      </div>
      <div class="form-group">
        {{ form_label(form.content) }}
        {{ form_widget(form.content, { 'attr': {'rows': '20'}  }) }}
        {{ form_errors(form.content) }}
      </div>

      <div class="form-group">
        {{ form_widget(form.inCarousel) }}
        {{ form_errors(form.inCarousel) }}
      </div>

      <div class="form-group">
        {{ form_label(form.imageUrl) }}
        {{ form_widget(form.imageUrl) }}
        {{ form_errors(form.imageUrl) }}
      </div>

      <br /><br />
      <div class="btn-outer">
        {{ form_widget(form.save) }}
      </div>
      {{ form_rest(form) }}
      {{ form_end(form) }}
    </div>
  </div>
{% endblock %}
