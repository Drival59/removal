{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style-gestion.css') }}">
{% endblock %}

{% block body %}
    <br>
    <div class="all_titre_gestion">
    <div class="div_titre_gestion_participation_normal">
    <div class="titre_gestion_participation_normal">
    <h2 class="titre_all_candidature">Candidature en cours</h2>
    <span><a class="archive" href="{{ path('removal_candidature_read_archive') }}">Les archives</a></span>
    </div>
    </div>
    </div>
    <br>
    <div class="all_table_candidature">
    <div class="table_candidature">
    <table class="table">
    <tr class="thead-light">
        <th>Personnage</th>
        <th>Membre</th>
        <th>Adresse mail</th>
        <th>BattleTag</th>
        <th>Classe</th>
        <th>Spécialisation</th>
        <th>Armurerie</th>
        <th>Discord ?</th>
        <th>Parrain ?</th>
        <th>Disponibilité</th>
        <th>Commentaires</th>
        <th>Status</th>
    </tr>
    {% for candidature in candidatures %}
        {% if candidature.status == "new" %}
        <tr class="table-warning">
            <td>{{ candidature.pseudo }}</td>
            <td>{{ candidature.utilisateur }}</td>
            <td>{{ candidature.utilisateur.email }}</td>
            <td>{{ candidature.battletag }}</td>
            <td>{{ candidature.classe }}</td>
            <td>{{ candidature.specialisation }}</td>
            <td><a href="{{ candidature.armurerie }}" target="_blank">Armurerie</a></td>
            <td>{{ candidature.discord }}</td>
            <td>{{ candidature.joueurReference }}</td>
            <td>{{ candidature.disponibilite|date('d-m-Y H:i:s') }}</td>
            <td>{{ candidature.description }}</td>
            {% if candidature.status == "new" %}
                <td><a href="{{ path('removal_candidature_update_status', {'candidatureID' : candidature.id}) }}"> <span class="fas fa-archive" data-toggle="tooltip" title="Archiver la candidature ?"></span></a></td>
                {% else %}
                <td>{{ candidature.status }}</td>
            {% endif %}
        </tr>
        {% endif %}
    {% endfor %}
    </table>
    </div>
    </div><br><br>



{% endblock %}